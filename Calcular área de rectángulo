using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Guia_01
{
    class Ejercicios
    {
        public void Ejercicio6()
        {
            float baseRectangulo;
            float alturaRectangulo;
            float areaRectangulo;

            Console.Write("Por favor ingrese lo que mide la base del rect치ngulo:");
            baseRectangulo = Convert.ToSingle(Console.ReadLine());
            Console.Write("Por favor ingrese lo que mide la altura del rect치ngulo:");
            alturaRectangulo = Convert.ToSingle(Console.ReadLine());

            areaRectangulo = (baseRectangulo * alturaRectangulo) / 2;            
            Console.WriteLine("El 치rea del rect치ngulo es " + areaRectangulo);
        }
  }
}
